@model TrainingX_2.Controllers.PaginatedList<TrainingX_2.Models.Training.Enrollment>

@{
    ViewData["Title"] = "รายชื่อผู้เข้าอบรม";
    int sequence = ((Model.PageIndex - 1) * Model.PageSize) + 1;
}
